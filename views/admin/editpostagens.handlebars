

{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card mt-4">
        <div class="card-body">
            <h2 >Editar Postagem: </h2>
                <form action="/admin/postagens/edit" method="POST">
                <input type="hidden" value="{{postagem._id}}" name="id">
                    <label for="titulo">Titulo: </label>
                    <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}">

                    <label for="slug">Slug: </label>
                    <input type="text" name="slug" class="form-control" value="{{postagem.slug}}">

                    <label for="descricao">Descrição: </label>
                    <input type="text" name="descricao" class="form-control"  value="{{postagem.descricao}}">
                    
                    <label for="conteudo">Conteudo: </label>
                    <textarea name="conteudo" class="form-control" style="resize: none;" >{{postagem.conteudo}}</textarea>

                    <label for="categoria">Categoria: </label>
                    <select name="categoria"  class="form-select"  value="{{postagem.categoria}}">
                            {{#each categorias}}
                                <option value="{{_id}}">{{nome}}</option>
                                {{else}}
                                <option value="0">Nenhuma Categoria registrada</option>
                            {{/each}}
                      </select>

                    <button class="btn btn-success mt-4" type="submit">Editar Postagem</button>
                     
                </form>

                <form action="/admin/postagens" method="POST">
                     <a href="/admin/postagens"><button class="btn btn-danger mt-4">Cancelar alteração</button></a>
                </form>
               
        </div>
</div>